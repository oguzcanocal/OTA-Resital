@model IEnumerable<RESITALMVC.MODEL.Entities.Hotel> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hoteller</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Hoteller</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Hoteller</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 8%">
                                Hotel Kodu
                            </th>
                            <th style="width: 20%">
                                Hotel Adı
                            </th>
                            <th>
                                Hotel Adresi
                            </th>
                            <th style="width: 8%" class="text-center">
                                Hotel ID
                            </th>
                            <th style="width: 40%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    #
                                </td>
                                <td>
                                    <a>
                                        @item.HotelCode
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @item.HotelName
                                    </a>
                                </td>
                                <td>
                                    <a>@item.HotelAdress</a>
                                </td>
                                <td>
                                    <a>@item.CreatedDate.ToShortDateString()</a>
                                </td>
                                <td class="project-actions text-right">
                                    <a id="createRoom" class="btn btn-info btn-sm" href="@Url.Action("Index","Rooms2",new { HotelID = item.ID })">

                                        
                                        <i class="fas fa-folder">
                                        </i>
                                        Oda Ekle
                                    </a>
                                    <a class="btn btn-success btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Fiyat
                                    </a>
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Görüntüle
                                    </a>
                                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit","Hotel", new { id= item.ID })">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
