@model RESITALMVC.MODEL.Entities.Rate
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hotel Düzenleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Fiyat Planı Güncelleme</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">

        @using (Html.BeginForm("Edit", "Rate", FormMethod.Post, new { RoomID = Model.RoomID }))
        {
            <div class="row">


                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Fiyat Planı Bilgileri</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="hidden" name="RoomID" value="@Model.RoomID" />
                                        <label for="inputName">Oda Adı</label>
                                        @Html.ValidationMessageFor(Model => Model.RateName, null, new { @class = "text-danger" })
                                        @Html.TextBoxFor(Model => Model.RateName, new { @class = "form-control" })
                                    </div>   
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <div class="col-md-12">
                        <a href=@Url.Action("Listing","Rate") class="btn btn-secondary">İptal</a>
                        <input type="submit" value="Kaydet" class="btn btn-success float-right">
                    </div>
                    <!-- /.card -->
                </div>




            </div>

        }


    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
</div>

