@model RESITALMVC.WebUI.Areas.Admin.VM.RoomTypesModel

@if (Model != null && Model.RoomsType != null && Model.RoomsType.Count() > 0)
{
    <div class="card-body p-0">
        <table id="roomTable" class="table">
            <thead>
                <tr>
                    <th>Oda Adı</th>
                    <th>Oda Açıklaması</th>
                    <th>Müsaitlik</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model.RoomsType)
                {
                    <tr>
                        <td>@item.RoomName</td>
                        <td>@item.RoomDescription</td>
                        <td>@item.RoomAvailability</td>
                        <td>
                            <a href=@Url.Action("Edit","Rooms2", new { id = item.ID}) class="btn btn-primary">Güncelle</a>
                            <a href=@Url.Action("Delete","Rooms2", new { id = item.ID}) class="btn btn-danger">Sil</a>
                            <a href=@Url.Action("Index","Rate", new { RoomID = item.ID}) class="btn btn-success">Fiyat Planı Oluştur</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
}

else
{
    <div class="alert alert-secondary" role="alert" style="margin:15px">
        Oda girilmemiştir.
    </div>
}


<!-- Modal -->
<div class="modal fade" id="ActionCreateModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        
    </div>
</div>

